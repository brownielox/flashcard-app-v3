<h1>New Card!!</h1>

<%= form_for :card, url: cards_path do |f| %>
  <p>
    <%= f.label :subject_name %><br>
    <%= f.text_field :subject_name %>
  </p>

  <p>
    <%= f.label :front %><br>
    <%= f.text_area :front %>
  </p>

  <p>
    <%= f.label :back %><br>
    <%= f.text_area :back %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
